    <script type="text/javascript" src="/{{=this_app}}/static/components/jquery/add-ons.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            $('#google_translate_element').hide();
            $('#cse-search-form').hide();
            $('#cli_web').hide('slow');
        });
        
        var huTi=null;
        var toggleUtilities=function(a){
            var selectors={
                '#google_translate_element' : '.goog-te-combo',
                '#cse-search-form' : '.gsc-input',
                '#cli_web' : '#_cmd'
            };
            
            for(k in selectors){
                if(a.href.indexOf(k)>=0 && !$(k).is(':visible')){
                    $(k).show();
                    $(selectors[k]).focus();
                }
                else{
                    $(k).hide();
                }
            }
        };
    </script>    
  </head>
  <body>
     <div id="top-bar">
      <a href="#google_translate_element" onclick="toggleUtilities(this);" class="float-left">{{=T('translation')}} | </a>
      <a href="#cse-search-form" onclick="toggleUtilities(this);" class="float-left"> {{=T('search (google)')}} | </a>
      <a href="#cli_web" onclick="toggleUtilities(this);" class="float-left"> <em>{{=T('command line')}} | </em></a>

       <span id="user-menu">
         {{ if 'auth' in globals():}}
           {{if not auth.user:}} 
             <a>]</a> {{=A(T('login'),_href=URL(r=request,c='default',f='user/login'))}} <a>[</a>
           {{else:}}
             {{=auth.user.display_name}} 
             {{=A(T('logout'),_href=URL(r=request,c='default',f='user/logout'))}} |
           {{pass}}
         {{pass}}
       </span> 
      <!-- end #user-menu -->

      <div class="clear"></div>
                    
      <div id="utilities" class="padt2pc">

          <div id="google_translate_element"></div>
          <script>
            function googleTranslateElementInit() {
              new google.translate.TranslateElement({
                pageLanguage: '{{=current_language[:2]}}'
              }, 'google_translate_element');
            }
          </script><script src="http://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>     
          <!-- end #google_translate_element-->    
    
          <div class="clear"></div>
          
          <div id="cli_web">
            <form action="/lcs/cli_web/_do" method="post" onsubmit="return on_cli_web_submit();">
                <input type="text" id="_cmd" name="_cmd" />
                {{if session.cli_web_flash:}}<font class="flash small">{{=session.cli_web_flash}}{{ session.cli_web_flash=False }}</font>{{pass}}
            </form>
          </div>
          <!-- end #cli_web -->
    
          <div id="cse-search-form">Loading</div>
          <script src="http://www.google.com/jsapi" type="text/javascript"></script>
          <script type="text/javascript">
            google.load('search', '1', {language : '{{=current_language[:2]}}'});
            google.setOnLoadCallback(function() {
              var customSearchControl = new google.search.CustomSearchControl('014007428035866690530:qpoerqfcidu');
              customSearchControl.setResultSetSize(google.search.Search.FILTERED_CSE_RESULTSET);
              var options = new google.search.DrawOptions();
              options.setSearchFormRoot('cse-search-form');
          
              options.setAutoComplete(true);
              customSearchControl.draw('cse', options);
            }, true);
          </script>
          <!-- end #cse-search-form -->
    
      </div>
      <!-- end #utilities -->

    </div>
    <!-- end #top-bar-->

    <div class="clear"></div>
    
    <div id="wrapper">
        <span id="logo">
          <a class="text-decoration-none">v0.1.0</a>
          <!--href="/welcome/default/roadmap"-->
        </span>
        <!-- end #logo -->

        <div id="menu-tabs">
          {{if response.menu:}}
                  <ul>
                      {{for _name,_active,_link in response.menu:}}
                          <li><a href="{{=_link}}" {{if not _active:}}class="inactive"{{pass}}>{{=T(_name)}}</a></li>
                      {{pass}}
                  </ul>
          {{pass}}
        </div>
        <div class="clear"></div>
        <!-- end #menu-tabs -->

        <div id="container">
          <div id="cse"></div>
          <!-- end #cse -->

          <div id="content">

            <div id="contextual-nav">
              <ul>
                  <li>                          
                      <h2 class="widgettitle">{{=T('Tags(categories)')}}
                          {{if response.categories:}}
                              {{if session.authorized:}}
                                  <span style="font-size: .8em; font-weight: normal;">
                                      [<a href="/{{=request.application}}/default/manage/category">{{=T('manage')}}</a>]
                                  </span>
                              {{pass}}
                          {{pass}}
                      </h2>
                      <ul>
                          <li><a href="/{{=request.application}}/default/index/posts">{{=T('view all')}}</a></li>
                          {{for _name,_count,_link in response.categories:}}
                              <li><a href="{{=_link}}">{{=_name}}</a> ({{=_count}})</li>
                          {{pass}}
                      </ul>                   
                  </li>
                  <!-- end sidebar categories -->
                  
                  {{if response.links:}}
                      <li>
                          <h2 class="widgettitle">
                              {{=T('Links')}}
                              {{if session.authorized:}}
                                  <span style="font-size: .8em; font-weight: normal;">
                                      [<a href="/{{=request.application}}/default/manage/link">{{=T('manage')}}</a>]
                                  </span>
                              {{pass}}
                          </h2>
                          <ul>
                              {{for _name,_link,_id in utilities.shorten_and_randomize(response.links, 5):}}
                                  <li>
                                      <a target="_blank" href="{{=_link}}">{{=_name}}</a>
                                  </li>
                              {{pass}}
                          </ul>                       
                      </li>
                  {{pass}}
                  <!-- end sidebar links -->

                  {{if response.pages:}}
                      <li class="pages">
                          <h2 class="widgettitle">
                              {{=T('Pages')}}
                              <span style="font-size: .8em; font-weight: normal;">
                                  [<a href="/{{=request.application}}/default/pages">{{=T('view all')}}</a>]
                              </span>
                          </h2>
                          <ul>
                              {{for _name,_active,_link in utilities.shorten_and_randomize(response.pages, 10):}}
                                  <li>
                                      .<a href="{{=_link}}">{{=T(_name)}}</a>
                                  </li>
                              {{pass}}
                          </ul>                       
                      </li>
                      <div class="clear"></div>
                      <br/>
                  {{pass}}
                  <!-- end sidebar links -->
                      
                  {{if session.authorized:}}
                      <li>
                          <h2>{{=T('Mini Admin')}}</h2>
                          <ul>
                              <li><a href="/{{=request.application}}/default/add/page">{{=T('add page')}}</a></li>
                              <li><a href="/{{=request.application}}/default/add/post">{{=T('add post')}}</a></li>
                              <li><a href="/{{=request.application}}/default/manage/category/add">{{=T('add category')}}</a></li>
                          </ul>
                      </li>
                  {{pass}}
                  <!-- -end mini admin -->

                  {{if response.sidebar_note:}}
                      <li>
                          <p>{{=response.sidebar_note}}</p>
                      </li>   
                  {{pass}}
                  <!-- end sidebar_note -->
              </ul>
            </div>
            <!-- end #contextual-nav -->          
              
            {{if response.flash:}}
