/* THEME SPECIFICS */

/* BODY, BODY ELEMENTS */
body {
    background-color: rgb(0, 0, 10);
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgb(0,0,10)), color-stop(1, rgb(100,110,100)));
    background-image: -moz-linear-gradient(top, rgb(0,0,10), rgb(100,110,100));
    filter:progid:DXImageTransform.Microsoft.Gradient(GradientType =3, startColorstr=rgb(0,0,10),endColorstr=rgb(100,110,100));        
}

#wrapper, wrapper {
    color: rgb(255, 250, 250);
    background-color: transparent;
}

#sidebar {
    font-size: 0.85em;
    margin-right: -33%;
    margin-top: 4%;
    min-height: 30em;
}

/* ELEMENTS */
#sidebar h1 {
    font-size: 1.2em;
    margin: 6% 0 0 !important;
}

input, textarea, select, input.gsc-input {
    background-color: rgb(255,252,250);
    color: rgb(30,20,0);
    outline: 1px solid rgb(0,10,10);
}

content input, content textarea, content select,
#content input, #content textarea, #content select {
    border-left: 1px solid rgb(0,40,40);
}

a:link {
    color: rgb(255, 250, 250);
    border-bottom:0.0008em solid rgb(165,165,165);
}
a:visited {
    color: rgb(240, 235, 235);
    border-bottom:0.0008em solid rgb(160,160,160);
}
a:hover, a:active {
    text-style: italic;
}

#sidebar a {
    font-size: 1.05em;
}

p {
    margin-top: 1%;
    margin-bottom: 1%;
}

/* CUSTOM ELEMENTS */
#cli_web #_cmd {
    color: rgb(255,254,253);
}

iframe[name='photo_frame'] {
    background-color: rgb(255, 255, 255);
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgb(180,180,180)), color-stop(1, rgb(255,255,255)));
    background-image: -moz-linear-gradient(top, rgb(180,180,180), rgb(255,255,255));
    filter:progid:DXImageTransform.Microsoft.Gradient(GradientType =3, startColorstr=rgb(180,180,180),endColorstr=rgb(255,255,255));
}

.page h2.nav {
    display:none;
}

#sidebar .media {
    width: 100% !important;
    background-color: #010000 !important;
}

#sidebar embed.media+div, #sidebar embed.media {
    margin-left: 5%;
}
#sidebar iframe[name="iframe-chat"] {
    width: 100%;
    min-height: 8em;
    margin-top: 4%;
}
#sidebar embed.media, iframe[name="iframe-chat"] {
    height: 12.5em;
    margin-top: 5%;
    padding: 2%;
    /* use .gradient in place in wrapper or #wrapper and remove these styles */
    /* classical */
    background-image: url("embedMediaBG.png");
    background-repeat: repeat-x;
    background-color: #000000;
    /* gradient */
    background-image: gradient(linear, left top, left bottom, color-stop(0, #010000), color-stop(1, #000000));
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0, #010000), color-stop(1, #000000));
    background-image: -moz-linear-gradient(top, #010000, #000000);
    filter:progid:DXImageTransform.Microsoft.Gradient(GradientType =3, startColorstr=#010000,endColorstr=#000000);
    /* other */
}
#sidebar embed.media+div {
    font-size: 0.9em;
    font-style: italic;
    border-top: 1px dotted #010000;
    margin: 2% 0;
}

.button, .link, .p, .grid, .errordialog {
  /* .errordialog: gwt */
  color: #FFFAFA
}
.button, .link {
  background-color: transparent;
}
.select {
  max-width: 60%;
}
